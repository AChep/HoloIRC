<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/dcc_pending_list_item_decline"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_clear" />

    <ImageView
        android:id="@+id/dcc_pending_list_item_accept"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/dcc_pending_list_item_decline"
        android:layout_toStartOf="@id/dcc_pending_list_item_decline"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_check" />

    <TextView
        android:id="@+id/dcc_pending_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toLeftOf="@id/dcc_pending_list_item_accept"
        android:layout_toStartOf="@id/dcc_pending_list_item_accept"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@android:string/ok"
        android:textAppearance="?android:attr/textAppearance" />

    <TextView
        android:id="@+id/dcc_pending_list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dcc_pending_list_item_title"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toLeftOf="@id/dcc_pending_list_item_accept"
        android:layout_toStartOf="@id/dcc_pending_list_item_accept"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@android:string/ok"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>