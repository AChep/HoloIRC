<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

    <PreferenceCategory android:title="Server info">
        <com.fusionx.lightirc.uisubclasses.LightEditTextPreference
            android:key="pref_title"
            android:title="Server title"/>
        <com.fusionx.lightirc.uisubclasses.LightEditTextPreference
            android:key="pref_url"
            android:title="Server URL"/>
        <com.fusionx.lightirc.uisubclasses.LightEditTextPreference
            android:key="pref_port"
            android:title="Server Port"
            android:inputType="number"
            android:singleLine="true"/>
        <com.fusionx.lightirc.uisubclasses.LightEditTextPreference
            android:key="pref_nick"
            android:title="Nick name"/>
        <PreferenceScreen
            android:fragment="com.fusionx.lightirc.activity.ServerSettingsActivity$ListViewSettingsFragment"
            android:key="pref_autojoin"
            android:title="Auto-join channels"/>
        <!--<CheckBoxPreference
            android:key="pref_auto_nick"
            android:defaultValue="false"
            android:title="Auto-change nick name"
            android:summary="If someone else is using your preferred nick another will automatically be used" />-->
    </PreferenceCategory>

    <PreferenceCategory android:title="Login info">
        <CheckBoxPreference
            android:key="pref_login"
            android:checked="false"
            android:title="Login required?"
            android:summary="For access to server - usually the answer is no"/>
        <com.fusionx.lightirc.uisubclasses.LightEditTextPreference
            android:enabled="false"
            android:key="pref_login_username"
            android:title="Username"/>
        <com.fusionx.lightirc.uisubclasses.LightEditTextPreference
            android:enabled="false"
            android:inputType="textPassword"
            android:key="pref_login_password"
            android:title="Password"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="NickServ Info">
        <CheckBoxPreference
            android:key="pref_nickserv"
            android:checked="false"
            android:title="Use NickServ?"
            android:summary="If server uses NickServ and you have registered"/>
        <EditTextPreference
            android:enabled="false"
            android:key="pref_nickserv_password"
            android:title="NickServ password"
            android:inputType="textPassword"/>
    </PreferenceCategory>

</PreferenceScreen>