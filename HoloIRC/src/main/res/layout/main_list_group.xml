<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/group_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.fusionx.lightirc.ui.widget.NoParentPressImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_expand"
            android:contentDescription="expander_status"
            android:scaleType="center"
            android:clickable="true"
            android:background="@drawable/overflow_selector"
            android:layout_gravity="center_vertical"
            android:src="?expand_close_menu_drawable"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="8dip"
            android:paddingTop="16dip"
            android:paddingBottom="16dip"/>

    <LinearLayout
            android:paddingLeft="40dip"
            android:id="@+id/group_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/card_server_overflow">
        <TextView
                android:textColor="#cc222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/server_title"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:paddingTop="@dimen/margin_medium"
                android:text="Text"/>
        <TextView
                android:textColor="#cc222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/server_status"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_medium"
                android:text="Disconnected"/>
    </LinearLayout>

    <!--<com.fusionx.lightirc.ui.widget.NoParentPressImageView
            android:id="@+id/overflow_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/overflow"
            android:src="?overflow_menu_drawable"
            android:background="@drawable/activatable_item_background"
            android:layout_gravity="center"
            android:scaleType="center"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>-->

    <View
            android:id="@+id/divider"
            android:background="#e2e2e2"
            android:layout_width="fill_parent"
            android:layout_height="1.2dp"
            android:layout_below="@+id/group_content" />
</RelativeLayout>